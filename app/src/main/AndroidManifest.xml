<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.material.tblagodarova.design">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/Theme.DesignAppTheme"
            android:name=".ui.ApplicationClass">
        <activity
                android:name=".ui.HomeActivity"
                android:label="@string/app_name"
                android:theme="@style/Theme.NoActionBarTheme"
               >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.material.tblagodarova.design.ui.MainActivity"
                  android:label="@string/app_name">
        </activity>

        <activity android:name="com.material.tblagodarova.design.ui.CrossfadeActivity"
                  android:label="@string/title_crossfade"
                  android:uiOptions="splitActionBarWhenNarrow"
                  android:parentActivityName="com.material.tblagodarova.design.ui.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value="com.material.tblagodarova.design.ui.MainActivity" />
        </activity>

        <activity android:name="com.material.tblagodarova.design.ui.CardFlipActivity"
                  android:label="@string/title_card_flip"
                  android:parentActivityName="com.material.tblagodarova.design.ui.MainActivity"
                  android:theme="@style/DarkTheme">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value="com.material.tblagodarova.design.ui.MainActivity" />
        </activity>

        <activity android:name="com.material.tblagodarova.design.ui.ScreenSlideActivity"
                  android:label="@string/title_screen_slide"
                  android:parentActivityName="com.material.tblagodarova.design.ui.MainActivity"
                  android:uiOptions="splitActionBarWhenNarrow">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value="com.material.tblagodarova.design.ui.MainActivity" />
        </activity>

        <activity android:name="com.material.tblagodarova.design.ui.ZoomActivity"
                  android:label="@string/title_zoom"
                  android:parentActivityName="com.material.tblagodarova.design.ui.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value="com.material.tblagodarova.design.ui.MainActivity" />
        </activity>

        <activity android:name="com.material.tblagodarova.design.ui.LayoutChangesActivity"
                  android:label="@string/title_layout_changes"
                  android:parentActivityName="com.material.tblagodarova.design.ui.MainActivity">>
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value="com.material.tblagodarova.design.ui.MainActivity" />
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="fde999be492fea9e48272e48cf24ccb1afdbaea5" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
